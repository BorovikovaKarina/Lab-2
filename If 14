
//If 14 
//Даны три числа вывести вначале наименьшее а затем наибольшее из данных чисел
#include <iostream>
using namespace std;

int main()
{
    int a, b, c, max, min;
    cout << "Enter A, B, C: "<< endl;
    cin >> a >> b >> c ;
    cout << "A: "<< a << " B: "<< b <<" C: "<< c << endl;
    max=a;
    if  ( b> max ) {
        max=b;
    }
    if  ( c> max ) {
        max=c;
    } 
    min=a;
    if  ( b< min ) {
        min=b;
    }
    if  ( c< min ) {
        min=c;
    }
     cout << "The Least of these numbers: "<< min << " The largest of these numbers: "<< max << endl;
    return 0;
}
