        case 16:    cout << "shestnadcat ";
                    break;
        case 17:    cout << "semnadcat ";
                    break;
        case 18:    cout << "vosemnadcat ";
                    break;
        case 19:    cout << "deviatnadcat ";
                    break;
    }
}
      else
switch (int (c2 / 10))
    	  {
    	  
    case 2: cout << "dvadcat ";
    	    break;
    case 3: cout << "tridcat ";
    	    break;
    case 4: cout << "sorok ";
    	    break;
    case 5: cout << "piatdesiat ";
    	    break;
    case 6: cout << "shestdesiat ";
    	    break;
    case 7: cout << "semdesiat ";
    	    break;
    case 8: cout << "vosemdesiat ";
    	    break;
    case 9: cout << "devianosto ";
    	    break;
    }
          
switch (c2 % 10)
	{
    case 1:
    	  cout << "odin ";
    	  break;
    case 2:
    	  cout << "dva ";
    	  break;
    case 3:
    	  cout << "tri ";
